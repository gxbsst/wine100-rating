<div class="span3">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <% if current_user.leader? %>
          <li class="nav-header">组长操作</li>
          <li>
            <%= link_to '查看进度', '/wine_groups/progress' %>
          </li>
      <% end %>
      <li class="nav-header">酒组</li>
      <% @wine_groups.each do |wine_group| %>
          <% if wine_group.id ==  params[:id].to_i %>
              <li class="active">
          <% else %>
              <li>
          <% end %>
        <%= link_to wine_group.name, challenge_path(wine_group) %>
      </li>
      <% end %>
    </ul>
  </div><!--/.well -->
</div><!--/span-->
